# Name Mangler

@name = "Johanna Jackson"

def reverse_words(words)
  words.split.reverse.join(' ')
end

def borgify(string)
  string + " Borg"
end

# Mangle the name by reversing it or borgifying it
def modified_name(choose)
  new_name1 = reverse_words(@name)
  # Store the mangled name
  @name = new_name1
  puts new_name1
  if choose
    new_name2 = borgify(reverse_words(new_name1))
    puts new_name2
    @name = new_name2
  end
  return @name
end

puts "New name: #{modified_name(false)}"
puts "New borg name: #{modified_name(true)}"